{
  "compilerOptions": {
  "target": "ESNext",
  "module": "CommonJS",
  "moduleResolution": "node",
  "outDir": "./dist",
  "rootDir": "./src",
  "lib": ["ESNext", "DOM", "ES2020"],
  "types": ["node"],
  "typeRoots": ["./node_modules/@types"],
  "skipLibCheck": true,
  "strict": true,
  "resolveJsonModule": true,
  "forceConsistentCasingInFileNames": true,
  "esModuleInterop": true,
},
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
