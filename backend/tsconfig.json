{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
